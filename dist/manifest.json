{
  "name": "Vine Helper",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
  },
  "permissions": [],
  "description": "Enhances the Amazon Vine browsing experience",
  "action": {
    "default_title": "Vine Helper",
    "default_popup": "./popup.html"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.amazon.com/vine/*"
      ],
      "js": [
        "./content.js"
      ]
    }
  ]
}