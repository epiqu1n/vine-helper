{
  "name": "Vine Helper",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "./icons/parrot_16.png",
    "48": "./icons/parrot_48.png",
    "128": "./icons/parrot_128.png"
  },
  "permissions": [],
  "description": "Enhances the Amazon Vine browsing experience",
  "homepage_url": "",
  "action": {
    "default_title": "Vine Helper",
    "default_popup": "./popup.html"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*", "http://*/*"
      ],
      "js": [
        "./content.js"
      ]
    }
  ]
}